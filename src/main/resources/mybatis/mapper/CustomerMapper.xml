<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmall_backend.bysj.mapper.CustomerMapper">
    <select id="queryCustomerById" resultType="Customer">
        select * from customer where id=#{id}
    </select>

    <select id="queryCustomerList" resultType="Customer">
        select * from customer
    </select>

    <select id="queryCustomerByName" resultType="Customer">
        select * from customer where customer_name = #{name} limit 1
    </select>

    <select id="queryCustomerByNameAndPass" resultType="Customer">
        select * from customer where customer_name = #{name} and customer_passwd = #{password}
    </select>

    <insert id="insertCustomer" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="Customer">
        insert into customer (id, customer_name, customer_passwd) values (null, #{name}, #{password})
    </insert>
</mapper>